STATUS=@STATUS@
THEME=@THEME@
NAME=@NAME@
VERSION=@VERSION@
ARCH=$(shell arch)

all:
# background
	convert images/background4x3.png -fill '#857b7b' -font /usr/share/fonts/ttf/dejavu/DejaVuSansCondensed-Bold.ttf -style Normal -weight Normal -pointsize 20 -gravity northeast -draw 'text 64,64 "@STATUS@"' background4x3.png
	convert images/background16x9.png -fill '#857b7b' -font /usr/share/fonts/ttf/dejavu/DejaVuSansCondensed-Bold.ttf -style Normal -weight Normal -pointsize 20 -gravity northeast -draw 'text 64,64 "@STATUS@"' background16x9.png
	cp -alf background4x3.png graphics/backgrounds/default.png
	cp -alf background16x9.png graphics/backgrounds/default-wide.png
	cp -alf background4x3.png graphics/backgrounds/xdm.png

include components.mk
install: browser-qt ahttpd boot indexhtml
